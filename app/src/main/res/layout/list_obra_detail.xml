<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10sp"
            android:paddingBottom="20sp"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:background="@drawable/boton_redondo_blanco">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_title_obra_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/play_name"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/browser_actions_text_color"
                    app:fontFamily="@font/roboto_light" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_obra_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/browser_actions_text_color"
                    android:layout_toRightOf="@+id/textview_title_obra_name"
                    android:paddingStart="10dp"
                    app:fontFamily="@font/roboto_light" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout1"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_redondo_blanco"
                android:layout_below="@+id/relativeLayout">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_title_obra_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/play_description"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/browser_actions_text_color"
                    app:fontFamily="@font/roboto_light"
                    app:layout_constraintStart_toStartOf="parent" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_obra_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/browser_actions_text_color"
                    android:layout_toRightOf="@+id/textview_title_obra_description"
                    android:paddingStart="10dp"
                    app:fontFamily="@font/roboto_light"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout2"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_redondo_blanco"
                android:layout_below="@+id/relativeLayout1">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_title_obra_starring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/play_starring"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/browser_actions_text_color"
                    app:fontFamily="@font/roboto_light" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_obra_starring"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/browser_actions_text_color"
                    android:layout_toRightOf="@+id/textview_title_obra_starring"
                    android:paddingStart="10dp"
                    app:fontFamily="@font/roboto_light" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout3"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:paddingBottom="10dp"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_redondo_blanco"
                android:layout_below="@+id/relativeLayout2">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_title_obra_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/play_address"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/browser_actions_text_color"
                    app:fontFamily="@font/roboto_light" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_obra_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/browser_actions_text_color"
                    android:layout_toRightOf="@+id/textview_title_obra_address"
                    android:paddingStart="10dp"
                    app:fontFamily="@font/roboto_light"
                    />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout4"
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_redondo_blanco"
                android:layout_below="@+id/relativeLayout3">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_title_obra_authors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/play_authors"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/browser_actions_text_color"
                    app:fontFamily="@font/roboto_light" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_obra_authors"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/browser_actions_text_color"
                    android:layout_toRightOf="@+id/textview_title_obra_authors"
                    android:paddingStart="10dp"
                    app:fontFamily="@font/roboto_light" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout5"
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_redondo_blanco"
                android:layout_below="@+id/relativeLayout4">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_title_obra_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/play_date"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/browser_actions_text_color"
                    app:fontFamily="@font/roboto_light" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_obra_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/browser_actions_text_color"
                    android:layout_toRightOf="@+id/textview_title_obra_date"
                    android:paddingStart="10dp"
                    app:fontFamily="@font/roboto_light" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout6"
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_redondo_blanco"
                android:layout_below="@+id/relativeLayout5">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_title_obra_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/play_length"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/browser_actions_text_color"
                    app:fontFamily="@font/roboto_light" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_obra_length"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/browser_actions_text_color"
                    android:layout_toRightOf="@+id/textview_title_obra_length"
                    android:paddingStart="10dp"
                    app:fontFamily="@font/roboto_light" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/relativeLayout7"
                android:layout_width="match_parent"
                android:paddingBottom="10dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:background="@drawable/boton_redondo_blanco"
                android:layout_below="@+id/relativeLayout6">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_title_obra_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:text="@string/play_type"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/browser_actions_text_color"
                    app:fontFamily="@font/roboto_light" />

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/textview_obra_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/roboto_light"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textColor="@color/browser_actions_text_color"
                    android:layout_toRightOf="@+id/textview_title_obra_type"
                    android:paddingStart="10dp"
                    app:fontFamily="@font/roboto_light" />
            </RelativeLayout>

        </RelativeLayout>

    </androidx.core.widget.NestedScrollView>

</RelativeLayout>